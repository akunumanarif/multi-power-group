{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@config/*": [
        "src/config/*"
      ],
      "@kafka/*": [
        "kafka/*"
      ],
      "@logger/*": [
        "logger/*"
      ],
      "@ordersController/*": [
        "apps/order-service/src/controller/*"
      ],
      "@ordersDto/*": [
        "apps/order-service/src/dto/*"
      ],
      "@ordersEntity/*": [
        "apps/order-service/src/entity/*"
      ],
      "@ordersModule/*": [
        "apps/order-service/src/module/*"
      ],
      "@ordersService/*": [
        "apps/order-service/src/service/*"
      ],
      "@root/*": [
        "./*"
      ],
      "@src/*": [
        "src/*"
      ]
    }
  }
}